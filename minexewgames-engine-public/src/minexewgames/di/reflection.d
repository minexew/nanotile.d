module minexewgames.di.reflection;

import std.conv;
import std.range;
import std.traits;

template MethodArguments(alias overload, string overloadAsString) {
    string[] storageClasses() {
        string[] args;

        foreach (i; ParameterStorageClassTuple!overload) {
            static if (i == ParameterStorageClass.ref_)
                args ~= "ref ";
            else 
                args ~= "";
        }

        return args;
    }

    string[] names() {
        string[] args;

        foreach (i; ParameterIdentifierTuple!overload)
            args ~= i;

        return args;
    }

    string[] typeNames() {
        string[] args;

        foreach (int i, type; ParameterTypeTuple!overload)
            args ~= "ParameterTypeTuple!(" ~ overloadAsString ~ ")[" ~ to!string(i) ~ "]";

        return args;
    }

    string declare(string prefix = "") {
        string args;
        
        foreach (storageClass, name, typeName; zip(storageClasses, names, typeNames)) {
            if (!args.empty)
                args ~= ", ";

            args ~= storageClass ~ typeName ~ " " ~ prefix ~ name;
        }
        
        return args;
    }

    string list(string prefix = "") {
        string args;
        
        foreach (storageClass, name, typeName; zip(storageClasses, names, typeNames)) {
            if (!args.empty)
                args ~= ", ";

            args ~= prefix ~ name;
        }
        
        return args;
    }
}